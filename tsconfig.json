{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["src/**/*"]
}
